class Person:
    def _init_(self, name, age, gender): #three attributes given to person class
        self.name = name
        self.age = age 
        self.gender = gender
    #the _init_ method gets called when you create a new object in a class. It takes 4 parameters: self, name, age, 
    #and gender... seld refers to the object itself and the other parameters are use to intialize the attributes of
    #the object
        def greet(self):
            print(f"Hello, my name is {self.name} and I am a {self.gender} person.")
            
